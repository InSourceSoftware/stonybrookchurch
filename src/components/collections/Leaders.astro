---
export interface Props {
  leaders: Leader[]
}

interface Leader {
  name: string,
  description: string,
  image: string,
  url: string
}

const { leaders } = Astro.props;
---

<div class="row">
  {leaders.map((leader) =>
    <div class="col-lg-2 col-md-4 col-6">
      <div class="andro_album style-2 sm">
        <div class="andro_album-img">
          <img class="andro_img-cover" src={leader.image} alt="Leader Image" />
        </div>
        <div class="andro_album-content">
          <span class="andro_album-artist">{leader.description}</span>
          <h5 class="andro_album-name">
            <a href={leader.url}>{leader.name}</a>
          </h5>
        </div>
      </div>
    </div>
  )}
</div>