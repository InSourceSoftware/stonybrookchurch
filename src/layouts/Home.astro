---
import BaseHead from '@components/BaseHead.astro';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import Hero from '@components/Hero.astro';

export interface Props {
  title: string,
  description: string,
  image: string,
  action?: Action | null
}

interface Action {
  url: string,
  label: string,
  icon?: string
}

const { title, description, image, action } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" dir="ltr">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<Hero image={image}>
      {action &&
        <a slot="action" href={action.url} class="button primary">{action.label}
          {action.icon &&<i class={`fal fa-${action.icon}`}></i>}
        </a>
      }
      
    </Hero>
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
