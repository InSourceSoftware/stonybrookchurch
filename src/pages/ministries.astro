---
import { getCollection } from 'astro:content';
import Page from '@layouts/Page.astro';

const ministries = await getCollection('ministries');
const connectIndex = 5;
const giveIndex = 7;
---

<Page title="Ministries" description="Lorem ipsum dolor sit amet." image="/assets/uploads/hero/church-1.jpg">
  {ministries.map((ministry, index) =>
    <div>
      {index == connectIndex &&
        <div class="section dark-overlay dark-overlay-2 bg-cover bg-center" style="background-image: url(/assets/uploads/banner/beach-1.jpg)">
          <div class="container text-center">
            <div class="section-title text-center">
              <h3 class="text-white fw-400 family-display">Connect With Us</h3>
              <p class="color-body-light-2">
                Lorem ipsum dolor sit amet concateur non tropp sit namo, allegro sustenuto
                spresso coel spresso concateur non value maro noro strata.
              </p>
            </div>
            <a href="/connect" class="button primary icon-after">Connect <i class="fal fa-arrow-right"></i></a>
          </div>
        </div>
      }
      {index == giveIndex &&
        <div class="section dark-overlay bg-dark bg-center">
          <div class="container text-center">
            <div class="section-title text-center">
              <h3 class="text-white fw-400 family-display">Give Online</h3>
              <p class="color-body-light-2">
                Lorem ipsum dolor sit amet concateur non tropp sit namo, allegro sustenuto
                spresso coel spresso concateur non value maro noro strata.
              </p>
            </div>
            <a href="/give" class="button primary icon-after">Give <i class="fal fa-arrow-right"></i></a>
          </div>
        </div>
      }
      {ministry.data.banner &&
        <div class="d-none d-lg-block">
          <div class="section bg-cover" style={`background-image: url(${ministry.data.banner.image})`}>
            <div class="container">
              <div class="row align-items-center justify-content-center">
                {ministry.data.banner.logo &&
                  <div class="col-lg-3 d-none d-lg-block">
                    <img src={ministry.data.banner.logo} alt="Ministry Logo" />
                  </div>
                }
                <div class="col-lg-8">
                  <div class="section-title mb-0">
                    <h3 class="family-display mb-0" set:html={ministry.data.banner.title}></h3>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      }
      <div class="section" id={ministry.slug}>
        <div class="container">
          <div class:list={['row align-items-center', { 'flex-row-reverse': index % 2 == 0 }]}>
            <div class="col-lg-6">
              <img src={ministry.data.image} alt="Ministry Image" />
            </div>
            <div class="col-lg-6">
              <div class="ms-0 mt-5 ms-lg-5 mt-lg-0">
                <h3 class="h2" set:html={ministry.data.heading}></h3>
                <p>{ministry.data.description}</p>
                {ministry.data.url &&
                  <a href={ministry.data.url} class="button primary">More Information</a>
                }
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  )}
</Page>