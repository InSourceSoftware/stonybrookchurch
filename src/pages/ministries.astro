---
import { getCollection } from "astro:content";
import Page from "../layouts/Page.astro";
import RenderEntry from "../components/collections/RenderEntry.astro";

const ministries = await getCollection('ministries');
---

<Page title="Ministries" description="Lorem ipsum dolor sit amet." image="/assets/uploads/church-header-1.jpg">
  {ministries.map((ministry, index) =>
    <div>
      {ministry.data.banner && 
        <div class="d-none d-lg-block">
          <div class="section bg-cover" style={`background-image: url(${ministry.data.banner.image})`}>
            <div class="container">
              <div class="row align-items-center justify-content-center">
                {ministry.data.banner.logo &&
                  <div class="col-lg-3 d-none d-lg-block">
                    <img src={ministry.data.banner.logo} alt="Ministry Logo" />
                  </div>
                }
                <div class="col-lg-8">
                  <div class="section-title mb-0">
                    <h3 class="family-display mb-0" set:html={ministry.data.banner.title}></h3>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      }
      <div class="section" id={ministry.slug}>
        <div class="container">
          <div class:list={['row align-items-center', { 'flex-row-reverse': index % 2 == 0 }]}>
            <div class="col-lg-6">
              <img src={ministry.data.image} alt="Ministry Image" />
            </div>
            <div class="col-lg-6">
              <div class="ms-0 mt-5 ms-lg-5 mt-lg-0">
                <h3 class="h2" set:html={ministry.data.heading}></h3>
                <p>{ministry.data.description}</p>
                {ministry.data.url &&
                  <a href={ministry.data.url} class="button primary">More Information</a>
                }
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  )}
</Page>